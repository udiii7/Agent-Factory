{
  "compilerOptions": {
    // File layout
    "rootDir": "src_bckd",
    "outDir": "dist",

    // Environment
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    // Node / Express types
    "lib": ["ES2020"],
    "types": ["node"],

    // Interop so `import express from "express"` works
    "esModuleInterop": true,

    // Output niceties
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended
    "skipLibCheck": true
  },
  "include": ["src_bckd"]
}
